{# templates/post/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Create New Post{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto bg-white shadow-md rounded-lg p-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Create New Post</h1>
    
    {# Formulaire de cr√©ation de post #}
    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        <div>
            {{ form_label(form.title, 'Title', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.title, {
                'attr': {
                    'class': 'mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500'
                }
            }) }}
            {{ form_errors(form.title) }}
        </div>

        <div>
            {{ form_label(form.content, 'Content', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.content, {
                'attr': {
                    'class': 'mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500',
                    'rows': 6
                }
            }) }}
            {{ form_errors(form.content) }}
        </div>

        <div class="flex justify-end">
            <button type="submit" 
                    class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 shadow">
                Submit
            </button>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
