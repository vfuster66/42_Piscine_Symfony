{% extends 'base.html.twig' %}

{% block title %}Edit Post{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto bg-white shadow-md rounded-lg p-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Edit Post</h1>
    
    {# Formulaire d'Ã©dition du post #}
    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        <div>
            {{ form_label(form.title, 'Title', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.title, {
                'attr': {
                    'class': 'mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500'
                }
            }) }}
            {{ form_errors(form.title) }}
        </div>

        <div>
            {{ form_label(form.content, 'Content', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.content, {
                'attr': {
                    'class': 'mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500',
                    'rows': 6
                }
            }) }}
            {{ form_errors(form.content) }}
        </div>

        <div class="flex justify-between items-center mt-4">
            <a href="{{ path('post_show', {'id': post.id}) }}" 
               class="text-sm font-medium text-gray-600 hover:text-gray-900">
                Cancel
            </a>

            <button type="submit" 
                    class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 shadow">
                Save Changes
            </button>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
