{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center">
    <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow-md">
        <div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Create your account
            </h2>
        </div>

        {{ form_start(registrationForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}
            <div class="rounded-md shadow-sm -space-y-px">
                <div class="mb-4">
                    {{ form_label(registrationForm.username, 'Username', {'label_attr': {'class': 'sr-only'}}) }}
                    {{ form_widget(registrationForm.username, {
                        'attr': {
                            'class': 'appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm',
                            'placeholder': 'Username'
                        }
                    }) }}
                </div>

                <div class="mb-4">
                    {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'sr-only'}}) }}
                    {{ form_widget(registrationForm.email, {
                        'attr': {
                            'class': 'appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm',
                            'placeholder': 'Email address'
                        }
                    }) }}
                </div>

                <div>
                    {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'sr-only'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {
                        'attr': {
                            'class': 'appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm',
                            'placeholder': 'Password'
                        }
                    }) }}
                </div>
            </div>

            <div>
                <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Register
                </button>
            </div>

            <div class="text-center">
                <a href="{{ path('app_login') }}" class="text-sm text-indigo-600 hover:text-indigo-500">
                    Already have an account? Sign in
                </a>
            </div>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}